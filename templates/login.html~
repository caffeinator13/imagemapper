    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 22.322204, lng: 87.304784},
          zoom: 15
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbLHWA00zx9FW9qT_kicXVELacMBo8Dao&callback=initMap"
    async defer></script>
